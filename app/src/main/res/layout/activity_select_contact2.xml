<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:layout_editor_absoluteY="25dp"
    android:fitsSystemWindows="true">

    <ImageView
        android:id="@+id/select_contact_activity_back_arrow"
        android:layout_width="70dp"
        android:layout_height="64dp"
        android:background="@color/colorPrimary"
        android:clickable="true"
        android:focusable="true"
        android:paddingBottom="20dp"
        android:paddingEnd="16dp"
        android:paddingTop="20dp"
        android:tint="@color/white_pure"
        app:layout_constraintBottom_toTopOf="@id/recyclerView_select_list_id"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_arrow_back_black_24dp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="56dp"
        android:layout_height="64dp"
        android:background="@color/colorPrimary"
        android:gravity="center|left"
        android:text="To"
        android:textColor="@color/white_pure"
        android:textSize="20sp"
        android:textStyle="normal"
        app:layout_constraintBottom_toTopOf="@+id/recyclerView_select_list_id"
        app:layout_constraintStart_toEndOf="@+id/select_contact_activity_back_arrow"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/editText_select_list_id"
        android:layout_width="246dp"
        android:layout_height="64dp"
        android:background="@color/colorPrimary"
        android:clickable="true"
        android:ems="10"
        android:focusable="true"
        android:hint="Search contact"
        android:textColor="@color/white_pure"
        android:textColorHint="#b2b2b2"
        android:textCursorDrawable="@null"
        app:layout_constraintBottom_toTopOf="@id/recyclerView_select_list_id"
        app:layout_constraintStart_toEndOf="@+id/textView2"
        app:layout_constraintTop_toTopOf="parent" />



    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerView_select_list_id"
        android:layout_width="384dp"
        android:layout_height="502dp"
        android:paddingBottom="32dp"
        android:scrollbars="vertical"
        android:fitsSystemWindows="true"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editText_select_list_id" />

</android.support.constraint.ConstraintLayout>