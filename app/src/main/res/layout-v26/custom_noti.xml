<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout"
    android:layout_width="match_parent"
    android:layout_height="64dp"
    android:background="@color/colorPrimary">

    <ImageView
        android:src="@drawable/ic_stat_name"
        android:id="@+id/image"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_margin="10dp"/>

    <TextView
        android:id="@+id/custom_noti_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:text="text1"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        android:layout_marginTop="6dp"
        android:layout_toRightOf="@id/image"/>

    <TextView
        android:id="@+id/custom_noti_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:text="1  2  3  4  5  6"
        android:textColor="@android:color/white"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_toRightOf="@id/image"
        android:layout_below="@id/custom_noti_title"
        android:paddingTop="2dp"/>

    <!--</LinearLayout>-->
    <RelativeLayout
        android:layout_width="64dp"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"
        android:clickable="true"
        android:id="@+id/relative_layout_copy">

        <ImageView
            android:src="@drawable/ic_content_copy"
            android:id="@+id/imageView_copy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Copy"
            android:textColor="@android:color/white"
            android:textSize="14sp"
            android:layout_marginStart="18dp"
            android:layout_below="@id/imageView_copy"/>
    </RelativeLayout>

</RelativeLayout>